{
    "family": "${APP_NAME}",
    "networkMode": "awsvpc",
    "requiresCompatibilities": ["FARGATE"],
    "cpu": "256",
    "memory": "512",
    "executionRoleArn": "arn:aws:iam::${AWS_ACCOUNT_ID}:role/ecsTaskExecutionRole",
    "containerDefinitions": [
        {
            "name": "${APP_NAME}",
            "image": "${AWS_ACCOUNT_ID}.dkr.ecr.${AWS_REGION}.amazonaws.com/${APP_NAME}:latest",
            "portMappings": [
                {
                    "containerPort": 8000,
                    "protocol": "tcp"
                }
            ],
            "environment": [
                {
                    "name": "DB_HOST",
                    "value": "${DB_HOST}"
                },
                {
                    "name": "DB_PORT",
                    "value": "${DB_PORT}"
                },
                {
                    "name": "DB_NAME",
                    "value": "${DB_NAME}"
                },
                {
                    "name": "PYTHONPATH",
                    "value": "/app"
                },
                {
                    "name": "ALLOWED_HOSTS",
                    "value": "*"
                },
                {
                    "name": "DEBUG",
                    "value": "True"
                }
            ],
            "secrets": [
                {
                    "name": "DB_USER",
                    "valueFrom": "arn:aws:ssm:${AWS_REGION}:${AWS_ACCOUNT_ID}:parameter/fastapi/db_user"
                },
                {
                    "name": "DB_PASSWORD",
                    "valueFrom": "arn:aws:ssm:${AWS_REGION}:${AWS_ACCOUNT_ID}:parameter/fastapi/db_password"
                },
                {
                    "name": "SECRET_KEY",
                    "valueFrom": "arn:aws:ssm:${AWS_REGION}:${AWS_ACCOUNT_ID}:parameter/fastapi/secret_key"
                },
                {
                    "name": "OPENAI_API_KEY",
                    "valueFrom": "arn:aws:ssm:${AWS_REGION}:${AWS_ACCOUNT_ID}:parameter/fastapi/openai_api_key"
                }
            ],
            "logConfiguration": {
                "logDriver": "awslogs",
                "options": {
                    "awslogs-group": "/ecs/${APP_NAME}",
                    "awslogs-region": "${AWS_REGION}",
                    "awslogs-stream-prefix": "ecs"
                }
            },
            "essential": true,
            "healthCheck": {
                "command": ["CMD-SHELL", "nc -z localhost 8000 || exit 1"],
                "interval": 30,
                "timeout": 5,
                "retries": 3,
                "startPeriod": 60
            }
        }
    ],
    "tags": [
        {
            "key": "Environment",
            "value": "Production"
        }
    ]
}